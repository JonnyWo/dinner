<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_Groups"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:elevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_Room"
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:scaleType="fitXY"
                android:text="2/4"
                android:textSize="36sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:layout_below="@+id/btn_Room"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/tv_Mo"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="0.1428571428571429"
                    android:background="@drawable/weekdaybutton_border_green"
                    android:gravity="center"
                    android:text="MO"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_Di"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="0.1428571428571429"
                    android:background="@drawable/weekdaybutton_border_red"
                    android:gravity="center"
                    android:text="DI"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_Mi"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="0.1428571428571429"
                    android:background="@drawable/weekdaybutton_border_green"
                    android:gravity="center"
                    android:text="MI"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_Do"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="0.1428571428571429"
                    android:background="@drawable/weekdaybutton_border_green"
                    android:gravity="center"
                    android:text="DO"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_Fr"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="0.1428571428571429"
                    android:background="@drawable/weekdaybutton_border_red"
                    android:gravity="center"
                    android:text="FR"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_Sa"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="0.1428571428571429"
                    android:background="@drawable/weekdaybutton_border_red"
                    android:gravity="center"
                    android:text="SA"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_So"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="0.1428571428571429"
                    android:background="@drawable/weekdaybutton_border_red"
                    android:gravity="center"
                    android:text="SO"
                    android:textColor="@color/white" />


            </LinearLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
